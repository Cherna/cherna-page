.side-nav-fake-hover {
  height: 100%;
  position: absolute;
  @include span-columns(2.5);
  @include omega;
  z-index: 475;
  backface-visibility: hidden;
}

.side-nav {
  position: fixed;
  height: 100%;
  z-index: 500;
  background-color: #fff;
  // overflow: hidden;
  opacity: 0.5;
  @include transition(all .3s ease);
  @include transform(translateZ(0));
  backface-visibility: hidden;
}

