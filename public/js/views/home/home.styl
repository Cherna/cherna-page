.home-canvas
  position absolute
  z-index 0
  left 0
.home-quote
  position absolute
  z-index 50
  top 20px
  left 50%
  transform translateX(-50%)
  text-align center
  font-size 12px
  font-weight 300
  max-width 420px
  .quote-text
    font-size 13px
    opacity 0.7
    span
      font-size 15px
  .quote-author
    margin-top 4px
    opacity 0.5
    letter-spacing 1px
    font-style italic