.main-content.home
  .home-works
    width 100%
    height 100%
    text-align center
    display flex
    align-items center
    justify-content center
    flex-wrap wrap
    @media screen and (max-width: 768px)
      flex-direction column
      .work-block
        margin 30px 0
  .work-block
    position relative
    display inline-block
    margin 30px 50px 30px 0
    transition transform 0.2s ease-in-out
    &:nth-child(even)
      margin-right 0
    .work-inner
      position absolute
      top 50%
      left 50%
      width 100%
      height 100%
      transform translate(-50%, -50%)
      background-color rgba(0,0,0,0.5)
      opacity 0
      transition opacity 0.2s ease-in-out
    &:hover
      transform scale(1.02)
      .work-inner
        opacity 1
    img
      max-width 350px
      max-height 250px
    @media screen and (min-width: 1200px)
      img
        max-width 500px
        max-height 350px
  .work-caption
    display flex
    justify-content center
    align-items center
    flex-direction column
    height 100%
    font-size 13px
    font-weight 400
    line-height 2
    letter-spacing 1px
    color white
    .year
      &:before
        content ''
        display block
        width 20px
        height 1px
        background-color white
        margin 3px auto
    