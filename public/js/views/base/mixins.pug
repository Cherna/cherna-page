mixin images-section
  div.images-section
    block

mixin image-box(imgs)
  div.image-box-outer(data-carousel=(Array.isArray(imgs) && imgs.length > 1) || false)
    div.image-box-inner
      if Array.isArray(imgs)
        each img in imgs
          .image-wrapper
            img.image-box-img(src=img)
      else
        .image-wrapper
          img.image-box-img(src=imgs)
    block

mixin image-description(name, info)
  div.image-description-cont
    span.image-description
      span.work-name #{name}, 
      span.work-info= info
    block
mixin image-slider
  div.image-slider
    block

mixin image-set
  div.image-set
    block