.main-nav
  position fixed
  display flex
  flex-direction column
  padding 10px 20px 0
  transform translateZ(0)
  z-index 1
  @media screen and (max-width: $tablet)
    box-shadow 0 0 10px 0 rgba(0,0,0,0.15)
    flex-direction row
    padding 10px 15px 12px
    height auto
    width 100%
    background-color #fafafa
    align-items center
    .home-link .item-text
      font-size 28px !important
    .nav-title
      font-size 18px !important
    .item-text
      font-size 16px !important
  .main-nav-content
    padding-left 5px
    @media screen and (max-width: $tablet)
      display none
  .home-link
    text-transform lowercase
    opacity 0.75
    transition opacity 0.15s ease-in-out
    z-index 1
    &:hover
      opacity 1
    .item-text
      position relative
      font-weight 300
      font-size 28px
      &:last-child
        font-weight 400
  .nav-item
    position relative
    margin 8px 0
    line-height 16px
    .item-text
      display inline-block
      font-size 12px
      letter-spacing 1px
      font-weight 400
      opacity 0.75
      transition opacity 0.15s ease-in-out
      &.selected
        opacity 1
        font-weight 600
        padding-left 4px
        border-left 4px solid #888
      &:hover
        opacity 1
  .nav-title
    font-size 16px
  .inner-list
    list-style none
    padding-left 5px
    li
      font-size 14px
      white-space nowrap
      margin 8px 0

.mobile-nav
  display none
  position absolute
  right 10px
  @media screen and (max-width: $tablet)
    display block
  .mobile-nav-content
    position fixed
    top 0
    left 0
    width 100vw
    background #fafafa
    padding 50px 30px 20px
    border-bottom 1px solid #ccc
    box-shadow 0 8px 8px -8px rgba(0,0,0,.3)
    opacity 0
    transform translateY(-5px)
    pointer-events none
    transition opacity 0.2s ease-in-out, transform 0.2s ease-in-out
  &.mobile-open
    .mobile-nav-content
      opacity 1
      transform translateY(10px)
      pointer-events all
    .hamburger
      opacity 0
    .hamburger-top
      transform rotateZ(45deg) translateY(4px) translateX(3px)
    .hamburger-bottom
      transform rotateZ(-45deg) translateY(-4px) translateX(3px)
  .hamburger-cont
    position relative
    cursor pointer
    user-select none
    top 1px
    padding 5px
    z-index 1
  .hamburger-inner
    position relative
  .hamburger
    display inline-block
    width 23px
    height 3px
    margin 5px 0
    background-color #555
    transition opacity 0.2s ease-in-out
  .hamburger-top, .hamburger-bottom
    position absolute
    left 0
    content ''
    width 23px
    height 3px
    background-color #555
    transition transform 0.2s ease-in-out
  .hamburger-top
    top 0px
  .hamburger-bottom
    bottom 0px