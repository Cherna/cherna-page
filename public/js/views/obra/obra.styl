#obra
  display flex
  justify-content center
  align-items center
  height 100%
  .obra-blocks-container
    width 60%
  .obra-block
    position relative
    display inline-block
    width 48%
    text-align center
    margin 1%
    transform scale(1)
    transition transform 0.2s ease-in-out
    .block-img
      width 100%
    .block-caption
      position absolute
      display flex
      justify-content center
      align-items center
      width 100%
      height 100%
      background-color rgba(20, 20, 30, 0.7)
      top 0
      left 0
      opacity 0
      color white
      transition opacity 0.2s ease-in-out
    &:hover
      transform scale(1.1)
      .block-caption
        opacity 1